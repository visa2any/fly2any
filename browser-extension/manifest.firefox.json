{
  "manifest_version": 2,
  "name": "Fly2Any — Flight Search",
  "version": "1.0.0",
  "description": "A premium travel technology platform for intelligent flight search and global route discovery.",
  "author": "Fly2Any",
  "homepage_url": "https://fly2any.com",
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Fly2Any — Flight Search",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "permissions": [
    "tabs",
    "https://fly2any.com/*"
  ],
  
  "browser_specific_settings": {
    "gecko": {
      "id": "fly2any-extension@fly2any.com",
      "strict_min_version": "91.0"
    }
  },
  
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
