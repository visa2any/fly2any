{
  "manifest_version": 3,
  "name": "Fly2Any — Flight Search",
  "version": "1.0.0",
  "description": "A premium travel technology platform for intelligent flight search and global route discovery.",
  "author": "Fly2Any",
  "homepage_url": "https://fly2any.com",
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Fly2Any — Flight Search",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "permissions": [
    "tabs"
  ],
  
  "host_permissions": [
    "https://fly2any.com/*"
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "web_accessible_resources": [{
    "resources": ["icons/*"],
    "matches": ["<all_urls>"]
  }],
  
  "minimum_chrome_version": "88"
}
