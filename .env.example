# Database
POSTGRES_URL="your_postgres_connection_string_here"

# Amadeus API
# Get your credentials at: https://developers.amadeus.com/
# NOTE: Amadeus is used for PRICE DISCOVERY ONLY - bookings go through Duffel or Consolidator
AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here
# Set to 'production' for live prices (api.amadeus.com) or 'test' for sandbox (test.api.amadeus.com)
AMADEUS_ENVIRONMENT=production

# Duffel API
# Get your credentials at: https://duffel.com/
# Note: Use DUFFEL_ACCESS_TOKEN (not DUFFEL_API_TOKEN)
# Token needs Read-Write scope for flight search (POST /offer_requests)
DUFFEL_ACCESS_TOKEN=your_duffel_access_token_here

# Duffel Order Creation (SAFETY GUARD)
# Set to 'true' ONLY if you want to enable actual booking creation
# Leave unset or 'false' for search-only mode (recommended for testing)
# DUFFEL_ENABLE_ORDERS=true

# LiteAPI Hotels (Sandbox)
# Get your credentials at: https://www.liteapi.travel/
LITEAPI_SANDBOX_PUBLIC_KEY=your_liteapi_public_key_here
LITEAPI_SANDBOX_PRIVATE_KEY=your_liteapi_private_key_here

# Hotelbeds APItude API
# Get your credentials at: https://developer.hotelbeds.com/
HOTELBEDS_API_KEY=your_hotelbeds_api_key_here
HOTELBEDS_SECRET=your_hotelbeds_secret_here
HOTELBEDS_BASE_URL=https://api.test.hotelbeds.com  # Use https://api.hotelbeds.com for production

# Email Services
# Mailgun: https://www.mailgun.com/
MAILGUN_API_KEY=your_mailgun_api_key_here

# Gmail: Use App Passwords - https://support.google.com/accounts/answer/185833
GMAIL_EMAIL=your_email@gmail.com
GMAIL_APP_PASSWORD="your gmail app password"

# MailerSend: https://www.mailersend.com/
MAILERSEND_API_KEY=your_mailersend_api_key_here

# N8N Automation
# Your N8N instance details
N8N_API_TOKEN=your_n8n_jwt_token_here
N8N_BASE_URL=https://your-n8n-instance.com

# Vercel (Optional - for deployment)
VERCEL_PROJECT_ID=your_vercel_project_id
VERCEL_ORG_ID=your_vercel_org_id

# Application
NEXT_PUBLIC_APP_URL=https://www.fly2any.com  # REQUIRED! Use http://localhost:3000 for development
NEXT_PUBLIC_APP_NAME=Fly2Any Travel

# SEO & Analytics (Required for the SEO system)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX  # Google Analytics 4 Measurement ID (optional but recommended)

# Google Maps (Optional - for embedded maps on hotel detail pages)
# Get your API key at: https://console.cloud.google.com/google/maps-apis
# Enable "Maps Embed API" for your project
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ML Pre-Fetch Cron Secret
# Generate with: openssl rand -base64 32
# Used to secure the ML pre-fetch endpoint
CRON_SECRET=your_secure_random_secret_here

# Redis Cache (Upstash)
# Get your credentials at: https://upstash.com/
# Free tier: 10,000 requests/day
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# NextAuth (Phase 7 - Authentication)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://www.fly2any.com

# Web Push Notifications (Phase 7 - PWA)
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:admin@fly2any.com

# Telegram Bot Notifications (FREE Admin Alerts)
# Create a bot via @BotFather on Telegram: https://t.me/BotFather
# Get your chat ID: send a message to your bot, then visit https://api.telegram.org/bot<TOKEN>/getUpdates
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ADMIN_CHAT_IDS=123456789,987654321  # Comma-separated list of admin chat IDs

# Admin Notification Emails (Optional - multiple emails comma-separated)
ADMIN_NOTIFICATION_EMAILS=admin@fly2any.com
