# ============================================
# FLY2ANY PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================
# Copy to .env.local and fill in values

# ===== REQUIRED FOR PRODUCTION =====

# Database (Neon PostgreSQL)
POSTGRES_URL="postgres://user:password@host/db?sslmode=require"
DATABASE_URL="postgres://user:password@host/db?sslmode=require"

# NextAuth Authentication
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secure-secret-here"
NEXTAUTH_URL="https://www.fly2any.com"

# Application URL (CRITICAL for SEO)
NEXT_PUBLIC_APP_URL="https://www.fly2any.com"

# ===== FLIGHT BOOKING APIs =====

# Duffel API (LIVE BOOKING)
# Get credentials at: https://duffel.com/
DUFFEL_ACCESS_TOKEN="duffel_live_xxx"
# Safety guard - set to true only when ready for real bookings
# DUFFEL_ENABLE_ORDERS=true

# Amadeus API (Price Discovery)
# Get credentials at: https://developers.amadeus.com/
AMADEUS_API_KEY="your-amadeus-key"
AMADEUS_API_SECRET="your-amadeus-secret"
AMADEUS_ENVIRONMENT="production"  # or "test" for sandbox

# ===== HOTEL BOOKING APIs =====

# LiteAPI Hotels (PRODUCTION)
LITEAPI_ENVIRONMENT="production"
LITEAPI_PUBLIC_KEY="prod_xxx"
NEXT_PUBLIC_LITEAPI_ENV="live"
NEXT_PUBLIC_LITEAPI_PUBLIC_KEY="prod_xxx"

# Hotelbeds APItude API
HOTELBEDS_API_KEY="your-hotelbeds-key"
HOTELBEDS_SECRET="your-hotelbeds-secret"
HOTELBEDS_BASE_URL="https://api.hotelbeds.com"  # Use test.hotelbeds.com for sandbox

# ===== PAYMENT PROCESSING =====
# NOTE: Payments are handled natively through booking APIs:
# - Flights: Duffel API (payment processed during order creation)
# - Hotels: LiteAPI (uses LiteAPI Payment SDK on client-side)
# No separate payment gateway (Stripe) required!

# ===== AI SERVICES =====

# Groq AI (Free Tier - 14,400 req/day, 30 req/min)
# Get key at: https://console.groq.com/
GROQ_API_KEY="gsk_xxx"

# ===== EMAIL SERVICES (MAILGUN) =====
# Mailgun configuration for transactional emails
# Get API key at: https://app.mailgun.com/app/account/security/api_keys
MAILGUN_API_KEY="your-mailgun-api-key"
MAILGUN_DOMAIN="mg.fly2any.com"
EMAIL_FROM="Fly2Any <support@fly2any.com>"

# Setup Instructions:
# 1. Create Mailgun account at https://mailgun.com
# 2. Add domain (e.g., mg.fly2any.com)
# 3. Configure DNS: MX, TXT (SPF, DKIM), CNAME
# 4. Verify domain in Mailgun dashboard
# 5. Get API key from Security settings

# ===== CACHING =====

# Upstash Redis (Free: 10,000 req/day)
# Get credentials at: https://upstash.com/
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# ===== MONITORING & ANALYTICS =====

# Sentry Error Tracking
# Get DSN at: https://sentry.io/
NEXT_PUBLIC_SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
SENTRY_ORG="your-org"
SENTRY_PROJECT="fly2any"
SENTRY_AUTH_TOKEN="sntrys_xxx"
NEXT_PUBLIC_SENTRY_ENVIRONMENT="production"

# Google Analytics 4
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Google Search Console Verification
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION="your-verification-code"

# ===== AUTHENTICATION PROVIDERS (Optional) =====

# Google OAuth
# Configure at: https://console.cloud.google.com/
# GOOGLE_CLIENT_ID="xxx.apps.googleusercontent.com"
# GOOGLE_CLIENT_SECRET="GOCSPX-xxx"
# Public client ID for Google One Tap (same value as GOOGLE_CLIENT_ID)
# NEXT_PUBLIC_GOOGLE_CLIENT_ID="xxx.apps.googleusercontent.com"

# ===== PWA & PUSH NOTIFICATIONS (Optional) =====

# Web Push VAPID Keys
# Generate with: npx web-push generate-vapid-keys
# NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"
# VAPID_PRIVATE_KEY="your-vapid-private-key"
# VAPID_SUBJECT="mailto:admin@fly2any.com"

# ===== ADMIN NOTIFICATIONS =====

# Telegram Bot (FREE alerts)
# Create bot via @BotFather: https://t.me/BotFather
# TELEGRAM_BOT_TOKEN="123456:ABC-xxx"
# TELEGRAM_ADMIN_CHAT_IDS="123456789,987654321"

# Admin Email Notifications
ADMIN_NOTIFICATION_EMAILS="admin@fly2any.com"

# ===== SECURITY =====

# Cron Job Secret (for scheduled tasks)
# Generate with: openssl rand -base64 32
CRON_SECRET="your-cron-secret"

# ===== THIRD-PARTY INTEGRATIONS (Optional) =====

# Google Maps (Hotel/venue maps)
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-maps-key"

# Facebook App ID (Social sharing)
# NEXT_PUBLIC_FACEBOOK_APP_ID="your-facebook-app-id"

# ===== DEPLOYMENT (Vercel) =====
# These are auto-set by Vercel
# VERCEL_URL
# VERCEL_ENV
