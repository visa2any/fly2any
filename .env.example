# Database
POSTGRES_URL="your_postgres_connection_string_here"

# Amadeus API (Test Environment)
# Get your credentials at: https://developers.amadeus.com/
AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here
AMADEUS_ENVIRONMENT=test

# LiteAPI Hotels (Sandbox)
# Get your credentials at: https://www.liteapi.travel/
LITEAPI_SANDBOX_PUBLIC_KEY=your_liteapi_public_key_here
LITEAPI_SANDBOX_PRIVATE_KEY=your_liteapi_private_key_here

# Email Services
# Mailgun: https://www.mailgun.com/
MAILGUN_API_KEY=your_mailgun_api_key_here

# Gmail: Use App Passwords - https://support.google.com/accounts/answer/185833
GMAIL_EMAIL=your_email@gmail.com
GMAIL_APP_PASSWORD="your gmail app password"

# MailerSend: https://www.mailersend.com/
MAILERSEND_API_KEY=your_mailersend_api_key_here

# N8N Automation
# Your N8N instance details
N8N_API_TOKEN=your_n8n_jwt_token_here
N8N_BASE_URL=https://your-n8n-instance.com

# Vercel (Optional - for deployment)
VERCEL_PROJECT_ID=your_vercel_project_id
VERCEL_ORG_ID=your_vercel_org_id

# Application
NEXT_PUBLIC_APP_URL=https://www.fly2any.com
NEXT_PUBLIC_APP_NAME=Fly2Any Travel

# Redis Cache (Upstash)
# Get your credentials at: https://upstash.com/
# Free tier: 10,000 requests/day
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here
