{
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=8192"
    }
  },
  "env": {
    "NEXT_PUBLIC_APP_NAME": "Fly2Any",
    "NEXT_PUBLIC_APP_URL": "https://www.fly2any.com"
  },
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "fly2any.com" }],
      "destination": "https://www.fly2any.com/:path*",
      "permanent": true
    }
  ],
  "crons": [
    {
      "path": "/api/cron/social-distribute",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/content-generate",
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/cron/master",
      "schedule": "0 * * * *"
    }
  ]
}
