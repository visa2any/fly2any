{
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=8192"
    }
  },
  "env": {
    "NEXT_PUBLIC_APP_NAME": "Fly2Any",
    "NEXT_PUBLIC_APP_URL": "https://fly2any.com"
  },
  "crons": [
    {
      "path": "/api/cron/seo-monitor",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/seo-generate",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/process-affiliate-commissions",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/process-commission-lifecycle",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/ml/prefetch",
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/cron/check-price-alerts",
      "schedule": "30 */4 * * *"
    },
    {
      "path": "/api/cron/precompute-routes",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/price-monitor",
      "schedule": "15 */4 * * *"
    },
    {
      "path": "/api/cron/scheduled-tasks",
      "schedule": "0 3 * * *"
    }
  ]
}
